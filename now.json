{
  "name": "nextjs-with-firebase",
  "builds": [
    {
      "src": "server/firebase/database.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "client/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
        {
            "src": "server/",
            "dest": "server/firebase/database.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client"
        }
    ],
  "version": 2
}
